<%= Rails.root %>
<%= Rails.root.join('app', 'assets', 'images', "kuva.jpg") %>
<%= image_path("kuva.jpg") %>
<%= link_to 'Home', root_url %>
<table>
<% @cats.each do |cat| %>
<% pictures = Picture.where("title LIKE '"+cat.id.to_s+"'") %>
<style>
#<%= cat.name %> { background-color: <%= cat.color %>; }
</style>
<tr>
	<td id='<%= cat.name %>'><%= cat.name %></td>
	<td><%= link_to 'view', cat %></td>
	<td><%= link_to 'edit', edit_cat_path(cat) %></td>
	<td><%= link_to 'delete', cat_path(cat), method: :delete, data: { confirm: 'Are you sure you want to delete ' + cat.name + '?' }%></td>
	<td><% pictures.each do |p| %>
			<%= image_tag("t"+p.filename) %>
		<% end %></td>
</tr>
<% end %>
</table>
<%= link_to 'Add a cat', new_cat_path %>